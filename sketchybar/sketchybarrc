#!/usr/bin/env lua
package.cpath = package.cpath .. ";/Users/" .. os.getenv("USER") .. "/.local/share/sketchybar_lua/?.so"

local sbar = require("sketchybar")

local theme = require("theme")
theme.load("tokyodark")


sbar.begin_config()

sbar.exec("borders"
  .. " active_color='" .. theme.border_active .. "'"
  .. " inactive_color='" .. theme.border_inactive .. "'"
  .. " width=5.0"
  .. " hidpi=off"
  .. " style=round")

  require("init")
sbar.hotload(true)
sbar.end_config()
sbar.event_loop()


